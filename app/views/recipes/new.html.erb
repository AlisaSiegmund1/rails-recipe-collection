<div class="base-container">
 <div class="row justify-content-md-center">
  <div class="col-lg-6 col-md-8 col-sm-12 justify-content-md-center" style="background-color: white">
    <div class="progress">
      <div class="progress-track"></div>
      <div id="step1" class="progress-step is-active">
        Rezept Details
      </div>
      <div id="step2" class="progress-step">
        Zutaten
      </div>
      <div id="step3" class="progress-step">
        Zubereitung
      </div>
    </div>
  </div>
</div>
<div class="row justify-content-md-center">
  <div class="col-lg-6 col-md-8 col-sm-12" style="background-color: white">
    <div class="recipe-edit">
      <%= simple_form_for (@recipe) do |f| %>
      <div class="details-one d-flex">
        <%= f.input :name %>
        <%= f.input :category, collection: ['Herzhaft', 'Süß'], label:"Kategorie", selected: 2%>
      </div>
      <div class="details-two d-flex">
        <%= f.input :serving, placeholder: 'z.B. 2', label:"Anzahl"%>
        <%= f.input :quantity, collection: ['Portionen', 'Stück'], label:"Einheit", selected: 1%>
      </div>
      <%= f.input :photo, as: :file, label: "Foto hochladen" %>
    </div>
  </div>
</div>
<div class="row justify-content-md-center">
  <div class="col-lg-6 col-md-8 col-sm-12 d-flex justify-content-between" style="background-color: white">
    <%= link_to "Zurück", root_path, class: "btn-shadow ml-3",id:"back" %>
    <%= f.submit "Weiter", class: "btn-shadow ml-3", id:"next"%>
    <% end %>
  </div>
</div>
</div>


