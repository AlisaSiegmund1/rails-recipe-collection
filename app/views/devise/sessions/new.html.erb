<div class="login-container col-lg-4 offset-lg-4">
  <%= cl_image_tag("https://res.cloudinary.com/siggimsiggi/image/upload/v1589618643/Component_1_o0l9di.png", id: "header-home") %>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions btn-shadow", id="login">
      <%= f.button :submit, "Log in"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
